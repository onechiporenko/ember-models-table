<div class="row global-search-wrapper">
  <div class="col-sm-offset-3 col-sm-7">
    {{input class="form-control search"
      value=filterString
      placeholder=searchPlaceholder
    }}
    {{#link-to "new" class="links"}}
      <i class="fa fa-user-plus fa-fw"></i>
      {{t "inviteBtn"}}
    {{/link-to}}
    <a href="/admin/users/participants/imports/new" class="links">
      <i class="fa fa-cloud-upload"></i>
      {{t "upload"}}
    </a>
    <span class="summary">
      {{upload}}
    </span>
  </div>
</div>
