{{#if this.column.componentForSortCell}}
  {{#let
    (component this.column.componentForSortCell
      column=this.column
      selectedItems=this.selectedItems
      expandedItems=this.expandedItems
      data=this.data
      themeInstance=this.themeInstance
      expandAllRows=this.expandAllRows
      toggleAllSelection=this.toggleAllSelection
      collapseAllRows=this.collapseAllRows)
  as |CellContent|}}
    {{#if (has-block)}}
      {{yield CellContent}}
    {{else}}
      <CellContent/>
    {{/if}}
  {{/let}}
{{else}}
  {{#if (has-block)}}
    {{yield}}
  {{else}}
    {{this.column.title}}
    {{#if this.column.useSorting}}
      <i class="{{if this.column.sortAsc this.themeInstance.sortAscIcon}} {{if this.column.sortDesc this.themeInstance.sortDescIcon}}">
      </i>
    {{/if}}
  {{/if}}
{{/if}}