{{#let
  (hash
    shouldAddExtraColumn=this.shouldAddExtraColumn
    RowSortingCell=(component
      this.themeInstance.rowSortingCellComponent
      themeInstance=this.themeInstance
      selectedItems=this.selectedItems
      expandedItems=this.expandedItems
      sort=this.doSort
      data=this.data
      expandAllRows=this.expandAllRows
      collapseAllRows=this.collapseAllRows
      toggleAllSelection=this.toggleAllSelection
    )
  )
as |RowSorting|}}
  {{#if (has-block)}}
    {{yield RowSorting}}
  {{else}}
    {{#if this.shouldAddExtraColumn}}
      <th>
        {{#if @groupHeaderCellComponent}}
          {{#let
            (component
              @groupHeaderCellComponent
              currentGroupingPropertyName=this.currentGroupingPropertyName
            ) as |GroupHeaderCellContent|}}
            <GroupHeaderCellContent/>
          {{/let}}
        {{else}}
          {{this.currentGroupingPropertyNameTitlelized}}
        {{/if}}
      </th>
    {{/if}}
    {{#each this.shownColumns as |column|}}
      <RowSorting.RowSortingCell @column={{column}}/>
    {{/each}}
  {{/if}}
{{/let}}