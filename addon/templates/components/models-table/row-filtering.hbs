{{#let
  (hash
    shouldAddExtraColumn=this.shouldAddExtraColumn
    RowFilteringCell=(component
      this.themeInstance.rowFilteringCellComponent
      themeInstance=this.themeInstance
      data=this.data
      selectedItems=this.selectedItems
      expandedItems=this.expandedItems
      expandAllRows=this.expandAllRows
      collapseAllRows=this.collapseAllRows
      toggleAllSelection=this.toggleAllSelection
    )
  )
as |RowFiltering|}}
  {{#if (has-block)}}
    {{yield RowFiltering}}
  {{else}}
    {{#if this.shouldAddExtraColumn}}
      <th></th>
    {{/if}}
    {{#each this.shownColumns as |column|}}
      <RowFiltering.RowFilteringCell @column={{column}}/>
    {{/each}}
  {{/if}}
{{/let}}