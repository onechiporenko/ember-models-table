{{#let
  (component @expandedRowComponent
    record=this.record
    visibleProcessedColumns=this.visibleProcessedColumns
    index=this.index
    clickOnRow=this.clickOnRow
    themeInstance=this.themeInstance
  )
as |RowExpand|}}
  <td colspan={{@visibleProcessedColumns.length}}>
    {{#if (has-block)}}
      {{yield RowExpand}}
    {{else}}
      <RowExpand />
    {{/if}}
  </td>
{{/let}}