{{#if (has-block)}}
  {{yield (hash groupedHeader=this.groupedHeader shouldAddExtraColumn=this.shouldAddExtraColumn)}}
{{else}}
  {{#if this.shouldAddExtraColumn}}
    <th></th>
  {{/if}}
  {{#each this.groupedHeader as |cell|}}
    <th colspan={{cell.colspan}} rowspan={{cell.rowspan}}>{{cell.title}}</th>
  {{/each}}
{{/if}}