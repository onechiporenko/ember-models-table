{{#if (has-block)}}
  {{yield (hash groupedHeader=@groupedHeader shouldAddExtraColumn=shouldAddExtraColumn)}}
{{else}}
  {{#if shouldAddExtraColumn}}
    <th></th>
  {{/if}}
  {{#each @groupedHeader as |cell|}}
    <th colspan={{cell.colspan}} rowspan={{cell.rowspan}}>{{cell.title}}</th>
  {{/each}}
{{/if}}