{{#with
  (hash
    data-group-by-select=(
      component themeInstance.components.select
      options=options
      value=value
      themeInstance=themeInstance
      class=themeInstance.changeGroupByField
    )
    themeInstance=themeInstance
    pageSizeOptions=pageSizeOptions
    pageSize=pageSize
    sort=sort
  )
as |dgbs|}}
  {{#if hasBlock}}
    {{yield dgbs}}
  {{else}}
    <div class={{themeInstance.dataGroupBySelectWrapper}}>
      <div class={{themeInstance.form}}>
        <div class={{themeInstance.formElementWrapper}}>
          <label>{{themeInstance.messages.groupByLabel}}</label>
          {{component dgbs.data-group-by-select}}
          <button
            class={{themeInstance.sortGroupedPropertyBtn}}
            onclick={{action "sort"}}>
            <i
              class={{if
                (is-equal sortByGroupedFieldDirection "asc")
                themeInstance.sort-asc
                themeInstance.sort-desc}}>
            </i>
          </button>
        </div>
      </div>
    </div>
  {{/if}}
{{/with}}