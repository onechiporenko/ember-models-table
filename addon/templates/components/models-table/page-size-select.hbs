{{#with
  (hash
    select=(
      component themeInstance.components.select
      options=pageSizeOptions
      value=pageSize
      type=type
      themeInstance=themeInstance
      class="changePageSize"
    )
    themeInstance=themeInstance
    pageSizeOptions=pageSizeOptions
    pageSize=pageSize
  )
as |pss|}}
  {{#if hasBlock}}
    {{yield pss}}
  {{else}}
    <form class={{themeInstance.form}}>
      <div class={{themeInstance.formElementWrapper}}>
        <label for={{inputId}}>{{themeInstance.messages.rowsCount}}</label>
        {{component
          pss.select
          id=inputId}}
      </div>
    </form>
  {{/if}}
{{/with}}
