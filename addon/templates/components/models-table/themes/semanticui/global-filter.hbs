{{#if hasBlock}}
  {{yield
    (hash
      themeInstance=themeInstance
    )}}
{{else}}
  <div class="globalSearch {{themeInstance.globalFilterWrapper}}">
    <label for={{inputId}} class="ui label">
      {{themeInstance.messages.searchLabel}}
    </label>
    {{input
      id=inputId
      type="text"
      value=value
      enter=(action "noop")
      class="filterString"
      placeholder=themeInstance.messages.searchPlaceholder}}
    {{#if globalFilterUsed}}
      <i
        class="clearFilterIcon {{themeInstance.clearFilterIcon}}"
        role="button"
        aria-label={{themeInstance.messages.clearGlobalFilter}}
        onclick={{action (mut value) ""}}>
      </i>
    {{/if}}
  </div>
{{/if}}