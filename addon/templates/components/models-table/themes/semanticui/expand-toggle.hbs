{{#if @isExpanded}}
  <a
    role="button"
    href="#"
    class={{concat this.themeInstance.buttonLink " " this.themeInstance.collapseRow}}
    onclick={{fn this.doCollapseRow @index @record}}>
    <i class={{this.themeInstance.collapseRowIcon}}></i>
  </a>
{{else}}
  <a
    role="button"
    href="#"
    class={{concat this.themeInstance.buttonLink " " this.themeInstance.expandRow}}
    onclick="{{fn this.doExpandRow @index @record}}>
    <i class={{this.themeInstance.expandRowIcon}}></i>
  </a>
{{/if}}
{{yield}}