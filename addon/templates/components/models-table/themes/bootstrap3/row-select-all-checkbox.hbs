<button
  onclick={{this.doToggleAllSelection}}
  type="button"
  class={{concat this.themeInstance.buttonLink " toggle-all"}}>
  {{#if (and this.selectedItems.length (not-eq this.selectedItems.length this.data.length))}}
    <span class="emt-icons-stack">
      <i class={{this.themeInstance.selectSomeRowsIcon}}></i>
      <i class={{this.themeInstance.deselectAllRowsIcon}}></i>
    </span>
    &nbsp;
  {{else}}
    <i class={{if
      (is-equal this.selectedItems.length this.data.length)
      this.themeInstance.selectAllRowsIcon
      this.themeInstance.deselectAllRowsIcon
    }}></i>
  {{/if}}
</button>
{{yield}}