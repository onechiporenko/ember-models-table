{{#if this.isExpanded}}
  <PaperButton @onClick={{fn this.doCollapseRow @index @record}} @iconButton={{true}}>
    <PaperIcon @icon={{this.themeInstance.collapseRowIcon}} class={{this.themeInstance.collapseRowIcon}}/>
  </PaperButton>
{{else}}
  <PaperButton @onClick={{fn this.doExpandRow @index @record}} @iconButton={{true}}>
    <PaperIcon @icon={{this.themeInstance.expandRowIcon}} class={{this.themeInstance.expandRowIcon}}/>
  </PaperButton>
{{/if}}
{{yield}}