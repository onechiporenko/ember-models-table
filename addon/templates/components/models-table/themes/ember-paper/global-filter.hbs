{{#if (has-block)}}
  {{yield}}
{{else}}
  {{paper-input
    class=(concat themeInstance.input " filterString")
    label=themeInstance.messages.searchLabel
    placeholder=themeInstance.messages.searchPlaceholder
    value=value onChange=(action (mut value))}}
  {{#if globalFilterUsed}}
    {{#paper-button class=(concat "clearFilterIcon " themeInstance.clearFilterIcon) onClick=(action (mut value) "") iconButton=true}}{{paper-icon "close"}}{{/paper-button}}
  {{/if}}
{{/if}}