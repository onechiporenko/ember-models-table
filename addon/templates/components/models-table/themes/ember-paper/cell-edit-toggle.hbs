{{#if isEditRow}}
  <PaperButton
    class={{concat themeInstance.buttonDefault " " themeInstance.cancelRowButton}}
    @raised={{true}}
    @onClick={{action "cancelClicked"}}>
    {{cancelButtonLabel}}
  </PaperButton>
  <PaperButton
    class={{concat themeInstance.buttonDefault " " themeInstance.saveRowButton}}
    @raised={{true}}
    @onClick={{action "saveClicked"}}>
    {{saveButtonLabel}}
  </PaperButton>
{{else}}
  <PaperButton
    class={{concat themeInstance.buttonDefault " " themeInstance.editRowButton}}
    @raised={{true}}
    @onClick={{action "editClicked"}}>
    {{editButtonLabel}}
  </PaperButton>
{{/if}}
{{yield}}