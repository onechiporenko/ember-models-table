{{#if this.isEditRow}}
  <PaperButton
    class={{concat this.themeInstance.buttonDefault " " this.themeInstance.cancelRowButton}}
    @raised={{true}}
    @onClick={{this.cancelClicked}}>
    {{this.cancelButtonLabel}}
  </PaperButton>
  <PaperButton
    class={{concat this.themeInstance.buttonDefault " " this.themeInstance.saveRowButton}}
    @raised={{true}}
    @onClick={{this.saveClicked}}>
    {{this.saveButtonLabel}}
  </PaperButton>
{{else}}
  <PaperButton
    class={{concat this.themeInstance.buttonDefault " " this.themeInstance.editRowButton}}
    @raised={{true}}
    @onClick={{this.editClicked}}>
    {{this.editButtonLabel}}
  </PaperButton>
{{/if}}
{{yield}}