{{#if @column.componentForSortCell}}
  {{#let
    (component @column.componentForSortCell
      column=this.column
      selectedItems=this.selectedItems
      expandedItems=this.expandedItems
      data=this.data
      themeInstance=this.themeInstance
      expandAllRows=this.expandAllRows
      toggleAllSelection=this.toggleAllSelection
      collapseAllRows=this.collapseAllRows)
  as |CellContent|}}
    {{#if (has-block)}}
      {{yield CellContent}}
    {{else}}
      <CellContent/>
    {{/if}}
  {{/let}}
{{else}}
  {{#if (has-block)}}
    {{yield}}
  {{else}}
    {{@column.title}}
    {{#if @column.useSorting}}
      {{#if (or @column.sortAsc @column.sortDesc)}}
        <PaperIcon
          @icon={{if @column.sortAsc this.themeInstance.sortAscIcon (if @column.sortDesc this.themeInstance.sortDescIcon)}}
          class={{if @column.sortAsc this.themeInstance.sortAscIcon (if @column.sortDesc this.themeInstance.sortDescIcon)}}
        />
      {{/if}}
    {{/if}}
  {{/if}}
{{/if}}