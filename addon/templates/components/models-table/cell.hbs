{{#if hasBlock}}
  {{yield
    (hash
      data=data
      record=record
      index=index
      column=column
      sendAction=sendAction
      expandRow=expandRow
      collapseRow=collapseRow
      expandAllRows=expandAllRows
      collapseAllRows=collapseAllRows
      themeInstance=themeInstance
      isExpanded=(exists-in expandedRowIndexes record)
    )
  }}
{{else}}
  {{#if column.routeName}}
    {{#link-to column.routeName record.id}}
      {{#if column.propertyName}}
        {{get record column.propertyName}}
      {{else}}
        {{record.id}}
      {{/if}}
    {{/link-to}}
  {{else}}
    {{#if column.component}}
      {{component
        column.component
        data=data
        record=record
        index=index
        column=column
        sendAction=sendAction
        expandRow=expandRow
        collapseRow=collapseRow
        expandAllRows=expandAllRows
        collapseAllRows=collapseAllRows
        themeInstance=themeInstance
        isExpanded=(exists-in expandedRowIndexes record)
      }}
    {{else}}
      {{get record column.propertyName}}
    {{/if}}
  {{/if}}
{{/if}}