{{#if (has-block)}}
  {{yield
    (hash
      record=this.record
      index=this.index
      column=this.column
      componentToRender=this.componentToRender
      groupedLength=this.groupedLength
      expandRow=this.expandRow
      collapseRow=this.collapseRow
      expandAllRows=this.expandAllRows
      collapseAllRows=this.collapseAllRows
      editRow=this.editRow
      cancelEditRow=this.cancelEditRow
      themeInstance=this.themeInstance
      clickOnRow=this.clickOnRow
      isExpanded=this.isExpanded
      isSelected=this.isSelected
      isEditRow=this.isEditRow
      saveRow=this.saveRow
      isColumnEditable=this.isColumnEditable
    )}}
{{else}}
  {{#if this.componentToRender}}
    {{#let (component this.componentToRender) as |CellContent|}}
      <CellContent
        @record={{this.record}}
        @index={{this.index}}
        @column={{this.column}}
        @isEditRow={{this.isEditRow}}
        @editRow={{this.editRow}}
        @saveRow={{this.saveRow}}
        @cancelEditRow={{this.cancelEditRow}}
        @expandRow={{this.expandRow}}
        @collapseRow={{this.collapseRow}}
        @expandAllRows={{this.expandAllRows}}
        @collapseAllRows={{this.collapseAllRows}}
        @clickOnRow={{this.clickOnRow}}
        @isExpanded={{this.isExpanded}}
        @isSelected={{this.isSelected}}
        @isColumnEditable={{this.isColumnEditable}}
        @groupedLength={{this.groupedLength}}
        @themeInstance={{this.themeInstance}} />
    {{/let}}
  {{/if}}
{{/if}}