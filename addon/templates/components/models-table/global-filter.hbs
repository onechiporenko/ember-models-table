{{#if (has-block)}}
  {{yield}}
{{else}}
  <div class={{concat this.themeInstance.form " globalSearch"}}>
    <div class={{this.themeInstance.formElementWrapper}}>
      <label for={{this.inputId}}>{{this.themeInstance.searchLabelMsg}}</label> <Input
        id={{this.inputId}}
        type="text"
        value={{this.value}}
        class={{concat this.themeInstance.input " filterString"}}
        @enter={{this.noop}}
        placeholder={{this.themeInstance.searchPlaceholderMsg}}/>
      {{#if this.globalFilterUsed}}
        <i
          class="clearFilterIcon {{this.themeInstance.clearFilterIcon}}"
          role="button"
          aria-label={{this.themeInstance.clearGlobalFilterMsg}}
          onclick={{fn (mut this.value) ""}}>
        </i>
      {{/if}}
    </div>
  </div>
{{/if}}