{{#if (has-block)}}
  {{yield}}
{{else}}
  <div class={{themeInstance.globalFilterWrapper}}>
    <div class={{concat themeInstance.form " globalSearch"}}>
      <div class={{themeInstance.formElementWrapper}}>
        <label for={{inputId}}>{{themeInstance.messages.searchLabel}}</label> {{input
          id=inputId
          type="text"
          value=value
          class=(concat themeInstance.input " filterString")
          enter=(action "noop")
          placeholder=themeInstance.messages.searchPlaceholder}}
        {{#if globalFilterUsed}}
          <i
            class="clearFilterIcon {{themeInstance.clearFilterIcon}}"
            role="button"
            aria-label={{themeInstance.messages.clearGlobalFilter}}
            onclick={{action (mut value) ""}}>
          </i>
        {{/if}}
      </div>
    </div>
  </div>
{{/if}}