<div class="{{@themeInstance.paginationWrapper}} {{@themeInstance.paginationWrapperDefault}}" ...attributes>
  {{#let
    (hash
      PageNumberSelect=(
        component (ensure-safe-component @themeInstance.selectComponent)
        id=this.inputId
        options=@currentPageNumberOptions
        value=@currentPageNumber
        type="number"
        themeInstance=@themeInstance
        changeValue=this.goToPage
      )
      goToPage=@goToPage
      goToFirst=this.gotoFirst
      goToPrev=this.gotoPrev
      goToNext=this.gotoNext
      goToLast=this.gotoLast
      goToBackEnabled=this.goToBackEnabled
      goToForwardEnabled=this.goToForwardEnabled
    )
  as |Pagination|
  }}
    {{#if (has-block)}}
      {{yield Pagination}}
    {{else}}
      <div class={{@themeInstance.paginationInternalWrapper}}>
        <div class={{@themeInstance.paginationBlock}}>
          <button
            class="{{if this.goToBackEnabled "enabled" "disabled"}} {{@themeInstance.buttonDefault}}"
            type="button"
            disabled={{unless this.goToBackEnabled "disabled"}}
            aria-label={{@themeInstance.goToFirstPageButtonTextMsg}}
            {{on "click" this.gotoFirst}}>
            {{#let (component (ensure-safe-component @themeInstance.navFirstIconComponent) themeInstance=@themeInstance) as |NavFirstIcon|}}<NavFirstIcon/>{{/let}}
          </button>
          <button
            class="{{if this.goToBackEnabled "enabled" "disabled"}} {{@themeInstance.buttonDefault}}"
            type="button"
            disabled={{unless this.goToBackEnabled "disabled"}}
            aria-label={{@themeInstance.goToPrevPageButtonTextMsg}}
            {{on "click" this.gotoPrev}}>
            {{#let (component (ensure-safe-component @themeInstance.navPrevIconComponent) themeInstance=@themeInstance) as |NavPrevIcon|}}<NavPrevIcon/>{{/let}}
          </button>
          <button
            class="{{if this.goToForwardEnabled "enabled" "disabled"}} {{@themeInstance.buttonDefault}}"
            type="button"
            disabled={{unless this.goToForwardEnabled "disabled"}}
            aria-label={{@themeInstance.goToNextPageButtonTextMsg}}
            {{on "click" this.gotoNext}}>
            {{#let (component (ensure-safe-component @themeInstance.navNextIconComponent) themeInstance=@themeInstance) as |NavNextIcon|}}<NavNextIcon/>{{/let}}
          </button>
          <button
            class="{{if this.goToForwardEnabled "enabled" "disabled"}} {{@themeInstance.buttonDefault}}"
            type="button"
            disabled={{unless this.goToForwardEnabled "disabled"}}
            aria-label={{@themeInstance.goToLastPageButtonTextMsg}}
            {{on "click" this.gotoLast}}>
            {{#let (component (ensure-safe-component @themeInstance.navLastIconComponent) themeInstance=@themeInstance) as |NavLastIcon|}}<NavLastIcon/>{{/let}}
          </button>
        </div>
      </div>
      {{#if @showCurrentPageNumberSelect}}
        <div class={{@themeInstance.currentPageSizeSelectWrapper}}>
          <form class={{@themeInstance.form}}>
            <div class={{@themeInstance.formElementWrapper}}>
              <label for={{this.inputId}}>{{@themeInstance.currentPageNumberMsg}}</label>
              <Pagination.PageNumberSelect/>&nbsp;
            </div>
          </form>
        </div>
      {{/if}}
    {{/if}}
  {{/let}}
</div>
