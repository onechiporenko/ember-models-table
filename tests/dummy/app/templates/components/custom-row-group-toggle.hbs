<a href="#" {{action "toggleGroupedRows"}}>
  {{currentGroupingPropertyName}}:
  {{groupedValue}}
  ({{visibleGroupedItems.length}}).
  {{if groupIsCollapsed "collapsed" "expanded"}}
</a>
<button
  type="button"
  class="toggle-selection-group"
  onclick={{action "toggleGroupedRowsSelection"}}>
</button>
<button
  type="button"
  class="toggle-expands-group"
  onclick={{action "toggleGroupedRowsExpands"}}>
</button>
<span class="expanded-count">{{expandedGroupedItems.length}}</span>
<span class="selected-count">{{selectedGroupedItems.length}}</span>